@page
@model HraModel
@{
    ViewData["Title"] = "Game page";
}

    <div class="jumbotron bg-danger p-4 m-4">
        <div class="text-center">
            <div class="jumbotron p-3 m-3 bg-dark text-white">
                <div class="d-flex justify-content-center p-3 m-3">
                    <h1 type="text" class="display-4">@(Model.aktualniotazka.textOtazka)</h1>
                </div>
                <div class="row">
                    <div class="col-3">
                        <p class="badge badge-pill badge-danger">Thor</p>
                    </div>
                    <div class="col-3">
                        <p class="badge badge-pill badge-danger">Tony Stark</p>
                    </div>
                    <div class="col-3">
                        <p class="badge badge-pill badge-danger">Kapitán Amerika</p>
                    </div>
                    <div class="col-3">
                        <p class="badge badge-pill badge-danger">Hulk</p>
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-center">
                <h2 class="display-4 text-white p-3 m-3">Aktuální kolo: @(Model.score)</h2>
            </div>
            <div class="jumbotron p-3 my-3 bg-white">
            <div class="d-flex justify-content-center p-3 m-3">
            <form method="post">
                <div class="row">
                    <div class="col-8">
                        <select class="custom-select" asp-for="Odpoveduzivatel">
                            <option value="Thor">Thor</option>
                            <option value="Tony Stark">Tony Stark</option>
                            <option value="Kapitán Amerika">Kapitán Amerika</option>
                            <option value="Hulk">Hulk</option>
                        </select>
                    </div>
                    <div class="col-4">
                        <input class="btn btn-success" type="submit" name="Odeslat" value="Vyhodnotit" />
                    </div>
                </div>
            </form>
            </div>
            </div>

        </div>
    </div>
